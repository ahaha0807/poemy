<%- if devise_mapping.omniauthable? %>
  <div class="user-session-oauth-wrapper">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to image_tag('twitter_icon.svg', class: 'user-session-links-twitter-sign-in-icon') + "でサインインする", omniauth_authorize_path(resource_name, provider), class: 'user-session-links user-session-links-twitter-sign-in' %><br />
    <% end -%>
  </div>  
<% end -%>

<ul class="user-session-links-wrapper">
  <%- if controller_name != 'sessions' %>
    <li>
      <%= link_to "サインイン", new_session_path(resource_name), class: 'user-session-links user-session-links-sign-in' %><br />
    </li>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <li>
      <%= link_to "アカウント新規作成", new_registration_path(resource_name), class: 'user-session-links user-session-links-registrations' %><br />
    </li>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <li>
      <%= link_to "パスワードを忘れた方はこちらから", new_password_path(resource_name), class: 'user-session-links user-session-links-new-password' %><br />
    </li>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <li>
      <%= link_to "確認メールを受け取りましたか？", new_confirmation_path(resource_name), class: 'user-session-links user-session-links-confirmations' %><br />
    </li>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <li>
      <%= link_to "アカウントのロック解除", new_unlock_path(resource_name), class: 'user-session-links user-session-links-unlock' %><br />
    </li>
  <% end -%>