<header class="header">
    <%= link_to image_tag('main_logo.png', {alt: 'logo', class: 'header-logo-img'}), landing_path, class: 'header-logo' %>
    <div class="header-menu-wrapper">
        
        <% if user_signed_in? %>
           <div class="header-post-button" id="header-post-button"></div>    
        <% else %>
            <%= link_to(new_user_session_path) do %>
               <div class="header-post-button" id="header-post-button"></div>    
            <% end %>            
        <% end %>
        
        <nav class="header-nav">
            <div class="header-nav-contents">
                <% if user_signed_in? %>
                    <%= render 'shared/header_menu_with_signed_in' %>
                <% else %>
                    <%= render 'shared/header_menu_with_non_signed_in' %>
                <% end %>
            </div>
        </nav>
    </div>
</header>