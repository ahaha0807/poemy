<header class="header">
    <%= link_to image_tag('main_logo.png', {alt: 'logo', class: 'header-logo-img'}), landing_path, class: 'header-logo' %>
    <nav class="header-nav">
        <div class="header-nav-contents">
            <% if user_signed_in? %>
                <strong>
                    <%= current_user.username %>
                </strong>
                <%= link_to 'プロフィール変更', edit_user_registration_path %>
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
            <% else %>
                <%= link_to 'アカウント作成', new_user_registration_path %>
                <%= link_to 'ログイン', new_user_session_path %>
            <% end %>
        </div>
    </nav>

    <div class="header-post-button" id="header-post-button"></div>
</header>